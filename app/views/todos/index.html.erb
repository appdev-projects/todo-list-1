      |
      <a href="/user_sign_in">Sign in</a>
      |
      <a href="/user_sign_out">Sign out</a>
 
 
    <h1>Your todo list</h1>

<div>
  <div>
    <h2>
      Add a new todo
    </h2>

    <form action="/insert_todo" method="post">
      <div>
        <label for="content_box">Describe the task:</label>
        <input type="text" id="content_box" name="query_content">
        <!--input type="hidden" name="query_status" value="next_up"--->
      </div>

      <button>Add to Next Up</button>
    </form>
  </div>
  </div>

  <div class="next_up">
   <h2>Next Up</h2>
   <ul>
   <% @list_next_up.each do |todos| %>
   
    <!--% if todos.status == "next_up" %-->
    <li>
    <div><%= todos.content %></div>

    <small>Added<%=time_ago_in_words(todos.created_at)%> ago
    <a href="/delete_todo/<%= todos.id %>">Delete</a>
    </small>
    
    <form action="/modify_todo/<%= todos.id %>" method="post">
    <input type="hidden"  name="query_status" value="in_progress">
       <button>Move to In Progress</button>
        </form>
      </li>
      <%end%>
      </ul>
      </div>
     <div class="in_progress">
     <h2>In Progress</h2>
     <ul>
     <% @in_progress.each do |todos| %>
     <li>
     <div><%= todos.content%></div>
        <small>Started <%= time_ago_in_words(todos.updated_at)%> ago
           <a href="/delete_todo/<%= todos.id %>">Delete</a>
         </small>
         <form action="/modify_todo/<%= todos.id%>" method="post">
         <input type="hidden" name="query_status" value="done">
         <button>Move to Done</button>
         </form>
        </li>
        </ul>
     <%end%>

    </div>
   
    <div class="done">
     <h2>Done</h2>
     
      <% @done.each do |todos| %>
      <ul>
      <li>
      <div><%= todos.content %></div>

     <% e = todos.updated_at %>
      <small> <%= e.time.strftime("Completed at %l:%M%P on %d-%b-%Y") %>
              <a href="/delete_todo/<%= todos.id %>">Delete</a>
      </small>
         </li>
        </ul>
        <%end%>
       </div>
